<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    tools:context=".ProductCategoryActivity">


    <include layout="@layout/custom_toolbar"></include>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewClothing"
        android:background="@color/white"
        android:layout_width="200dp"
        android:layout_marginTop="50dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_marginBottom="16dp"
        android:layout_rowWeight="1"
        android:layout_gravity="center"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">



        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:text="CLOTHING"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            />




    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewTechProducts"
        android:background="@color/white"
        android:layout_width="200dp"
        android:layout_marginTop="50dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_marginBottom="16dp"
        android:layout_rowWeight="1"
        android:layout_gravity="center"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">



        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:text="TECH PRODUCTS"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center"
            />




    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_Home_Appliances"
        android:background="@color/white"
        android:layout_width="200dp"
        android:layout_marginTop="50dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_marginBottom="16dp"
        android:layout_rowWeight="1"
        android:layout_gravity="center"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">



        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:text="HOME APPLIANCES"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center"
            />




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_Automotives"
        android:background="@color/white"
        android:layout_width="200dp"
        android:layout_marginTop="50dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_marginBottom="16dp"
        android:layout_rowWeight="1"
        android:layout_gravity="center"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">



        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:text="AUTOMOTIVES"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center"
            />
      <!--  android:paddingLeft="35dp"
        android:layout_marginTop="50dp"-->



    </androidx.cardview.widget.CardView>
</LinearLayout>